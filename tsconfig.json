{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "importHelpers": true,
    "sourceMap": true,
    "baseUrl": ".",
    "allowJs": true,
    "outDir": "bin",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "mocha"],
    "lib": ["esnext"],
    "typeRoots": ["src/typings"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
